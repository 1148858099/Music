<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_item_height"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/main_left_and_right_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black2"
            android:textSize="@dimen/main_text_item_top_size"/>

        <TextView
            android:id="@+id/item_music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray2"
            android:textSize="@dimen/main_text_item_bottom_size"/>

    </LinearLayout>
</LinearLayout>