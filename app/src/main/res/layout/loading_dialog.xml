<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/loading_dialog_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <ProgressBar
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_left_and_right_size"
        android:layout_marginLeft="@dimen/main_left_and_right_size"
        android:layout_marginRight="@dimen/main_left_and_right_size"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/main_left_and_right_size"
        android:text=""/>

</LinearLayout>